{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",           // Changed from commonjs for better React compatibility
    "jsx": "react-jsx",          // Changed from preserve to react-jsx
    "moduleResolution": "bundler", // Changed from node for better webpack compatibility
    "baseUrl": "./src",          // Changed to src directory
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],  // Added necessary libraries
    "allowJs": true,             // Added to allow JavaScript files
    "resolveJsonModule": true,
    "isolatedModules": true,     // Added for better module isolation
    "noEmit": true              // Added since webpack will handle emission
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}